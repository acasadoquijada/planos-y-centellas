<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/socialNetworkLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Â¡Sigue a Planos Y Centellas!"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/socialNetworkLabel">

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_instagram"
                    app:layout_constraintEnd_toStartOf="@+id/itunes"
                    tools:layout_editor_absoluteY="99dp" />

                <ImageView
                    android:id="@+id/itunes"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_itunes"
                    app:layout_constraintEnd_toStartOf="@+id/facebook"
                    tools:layout_editor_absoluteY="99dp" />

                <ImageView
                    android:id="@+id/youtube"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_youtube"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/socialNetworkLabel" />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_twitter"
                    app:layout_constraintEnd_toStartOf="@+id/instagram"
                    tools:layout_editor_absoluteY="98dp" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_facebook"
                    app:layout_constraintEnd_toStartOf="@+id/ivoox"
                    tools:layout_editor_absoluteY="98dp" />

                <ImageView
                    android:id="@+id/ivoox"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_ivoox"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="99dp" />

                <ImageView
                    android:id="@+id/spotify"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_spotify"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="99dp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>